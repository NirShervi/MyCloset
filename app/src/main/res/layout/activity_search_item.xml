<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchItem"
    android:background="#B022EC">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search items"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/search_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <EditText
        android:id="@+id/search_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:hint="Type"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="@color/white"

        android:transformPivotX="50dp"
        app:layout_constraintBottom_toTopOf="@+id/search_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/search_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:hint="Color"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/search_brand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/search_brand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:hint="Brand"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="@color/white"
        android:transformPivotX="50dp"
        android:transformPivotY="150dp"
        app:layout_constraintBottom_toTopOf="@+id/search_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/search_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:hint="Price"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="@color/white"
        android:transformPivotX="50dp"
        app:layout_constraintBottom_toTopOf="@+id/search_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="Search items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>